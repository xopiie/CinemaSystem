@model Uzunova_Nadica_1002387434_DSR_2021.Models.Spored

<div class="card border-info mb-3" style="max-width: 20rem;">
    <div class="card-header">
        <div style="float:right">
            @{
                if (User.IsInRole("Zaposleni"))
                {
                    <a class="btn btn-outline-danger" asp-action="Odstrani" asp-route-id="@Model.Id">✖</a>
                }
            }

        </div>

    </div>
    <div class="card-body">
        <p class="card-text">Film: <span class="text-info">@Html.ValueFor(x => x.NaslovFilma)</span></p>
        <p class="card-text">Dvorana: <span class="text-info">@Html.ValueFor(x => x.NazivDvorane)</span></p>
        <p class="card-text">Datum in čas: <span class="text-info">@Html.ValueFor(x => x.DatumCas)</span></p>
        <p class="card-text">Proste sedeže: <span class="text-info">@Html.ValueFor(x => x.ProsteSedeze)</span></p>

    </div>

    <a class="btn btn-outline-info" asp-action="Rezervacija" asp-route-id="@Model.Id">Rezerviraj</a>

</div> 